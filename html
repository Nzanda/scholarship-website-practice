 <script>
   function searchScholarships(){
     const input = document.getElementById("searchInput").value.tolowerCase();
     const scholarships = document.getElementByClassName("Scholarship");

     for (let i = 0; i< scholarships.length; i++) {
       const title = scholarships[i].getElementsByTagName("h2")[0].textContent.toLowerCase();
       scholarships[i].style.display = title.includes(input)?"":"none";
     }
     }
</script>
